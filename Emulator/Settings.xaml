<Window x:Class="Simulator.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		DataContext="{Binding Settings, Source={StaticResource Locator}}"
        Title="Settings" Height="160" Width="506" Foreground="AntiqueWhite" Background="Black" >
    <Grid>
        <ComboBox Height="23" Margin="0,30,135,0" Name="ComPortCombo"  VerticalAlignment="Top" IsTextSearchEnabled="False" IsReadOnly="True" ItemsSource="{Binding PortList, Mode=OneWay}" HorizontalAlignment="Right" Width="361" DropDownClosed="PortSelectionDropDownClosed" />
        <TextBlock Height="20" HorizontalAlignment="Left" Margin="10,10,0,0" Name="PortText" Text="Port to use for I/O:" VerticalAlignment="Top" Width="111" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="397,92,0,0" Name="CancelButton" VerticalAlignment="Top" Width="75" Command="{Binding Path=CloseCommand}" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="317,92,0,0" Name="SaveButton" VerticalAlignment="Top" Width="75" IsEnabled="{Binding Path=SaveEnabled, Mode=OneWay}" Command="{Binding Path=SaveFileCommand}" />
    </Grid>
</Window>
