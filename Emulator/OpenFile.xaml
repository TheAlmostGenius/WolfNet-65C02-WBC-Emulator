<Window x:Class="Emulator.OpenFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding OpenFile, Source={StaticResource Locator}}"
        Title="Open New Program" Height="242" Width="500" Foreground="AntiqueWhite" Background="Black" >
    <Grid HorizontalAlignment="Center" Width="500" Height="220" VerticalAlignment="Top">
        <Button Content="Select ROM" Height="23" HorizontalAlignment="Left" Margin="396,30,0,0" Name="SelectRomFile" VerticalAlignment="Top" Width="75" IsEnabled="{Binding Path=IsNotStateFile, Mode=OneWay}" Command="{Binding Path=SelectFileCommand}" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="11,30,0,0" Name="RomFilePath" VerticalAlignment="Top" Width="361" Text="{Binding Path=FileName}" IsReadOnly="True"/>
        <TextBlock Height="20" HorizontalAlignment="Left" Margin="10,10,0,0" x:Name="RomPathText" VerticalAlignment="Top" Width="73" Text="Path to ROM:" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="397,175,0,0" Name="CancelButton" VerticalAlignment="Top" Width="75" Command="{Binding Path=CloseCommand}" />
        <Button Content="Load" Height="23" HorizontalAlignment="Left" Margin="316,175,0,0" Name="LoadButton" VerticalAlignment="Top" Width="75" IsEnabled="{Binding LoadEnabled, Mode=OneWay}" Command="{Binding Path=LoadProgramCommand}" />
    </Grid>
</Window>
