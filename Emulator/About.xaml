<Window x:Class="Emulator.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		DataContext="{Binding About, Source={StaticResource Locator}}"
        Title="About" Height="250" Width="500" Foreground="AntiqueWhite" Background="Black" >
    <Grid>
        <TextBlock Height="23" TextWrapping="Wrap" Text="{Binding Path=Name}" Margin="21,31,25,180" />
        <TextBlock Height="46" TextWrapping="Wrap" Text="{Binding Path=Description}" Margin="21,78,25,110" />
        <TextBlock Height="23" TextWrapping="Wrap" Text="{Binding Path=Version}" Margin="21,124,440,87" />
        <TextBlock Height="23" TextWrapping="Wrap" Text="{Binding Path=Copyright}" Margin="80,124,25,87" />
        <Button Height="23" Width="75" Content="Close" Command="{Binding CloseCommand}" Margin="386,163,39,48" />
    </Grid>
</Window>

